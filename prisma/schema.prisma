generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id   Int    @id @default(autoincrement())
  name String @unique
  websiteUrl String
  contactNumber String
  cars CarModel[]
  planes PlaneModel[]
  boats BoatModel[]
}

model CarModel {
  id            Int      @id @default(autoincrement())
  name          String @unique
  brand         Brand @relation(fields: [brandId], references: [id])
  brandId       Int
  // Car-specific attributes
  engineSize    Float
  numberOfDoors Int
  carPublications CarPublication[]
}

model PlaneModel {
  id           Int      @id @default(autoincrement())
  name         String @unique
  brand        Brand @relation(fields: [brandId], references: [id])
  brandId      Int
  // Plane-specific attributes
  wingspan     Float
  maxAltitude  Float
  planePublications PlanePublication[]
}

model BoatModel {
  id           Int      @id @default(autoincrement())
  name         String @unique
  brand        Brand @relation(fields: [brandId], references: [id])
  brandId      Int
  // Boat-specific attributes
  lengthInFeet Float
  beamInFeet   Float
  draftInFeet  Float
  boatPublications BoatPublication[]
}

model CarPublication {
  id       Int    @id @default(autoincrement())
  carModel      CarModel    @relation(fields: [carModelId], references: [id])
  carModelId    Int
  mileage  Float
  year     Int
  // Car-specific publication attributes
  price    Float
  transmission String
  imageUrl String
  description String
  contactNumber String
}

model PlanePublication {
  id          Int      @id @default(autoincrement())
  planeModel       PlaneModel    @relation(fields: [planeModelId], references: [id])
  planeModelId     Int
  year     Int
  // Plane-specific publication attributes
  fuelCapacity Float
  imageUrl String
  contactNumber String
}

model BoatPublication {
  id         Int      @id @default(autoincrement())
  boatModel       BoatModel    @relation(fields: [boatModelId], references: [id])
  boatModelId     Int
  mileage    Float
  year     Int
  // Boat-specific publication attributes
  capacity   Int
  imageUrl String
  contactNumber String
}